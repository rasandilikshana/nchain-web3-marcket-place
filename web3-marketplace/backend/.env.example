# Server Configuration
PORT=3000
NODE_ENV=development

# nchain Blockchain Node
NCHAIN_API_URL=http://localhost:8080/api
NCHAIN_NODE_URL=http://localhost:8080

# Database (MongoDB for caching and indexing) - OPTIONAL
# Comment out if you don't have MongoDB installed - backend works without it!
# MONGODB_URI=mongodb://localhost:27017/gem-marketplace

# Contract Addresses (will be set after deployment)
GEM_NFT_CONTRACT_ID=
MARKETPLACE_CONTRACT_ID=

# API Keys (for external services)
IPFS_API_KEY=
IPFS_GATEWAY=https://ipfs.io/ipfs

# Security
JWT_SECRET=your-secret-key-change-this
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
